FROM node:20-slim

# Install minimal runtime tools
RUN apt-get update && apt-get install -y make ca-certificates git curl && rm -rf /var/lib/apt/lists/*

WORKDIR /workspace

# Copy only the entrypoint script into the image; the workspace will be mounted at runtime.
COPY docker-test-entrypoint.sh /usr/local/bin/docker-test-entrypoint.sh
RUN chmod +x /usr/local/bin/docker-test-entrypoint.sh

ENTRYPOINT ["/usr/local/bin/docker-test-entrypoint.sh"]

