{
  "name": "@blink/compiler-ts",
  "version": "1.0.0",
  "description": "TypeScript-only compiler for BRL/BCL/BDL languages",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:bundle": "esbuild src/index.ts --bundle --outfile=dist/blink-compiler.bundle.js --format=iife --global-name=BlinkCompiler",
    "test": "jest",
    "clean": "rm -rf dist"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "blink",
    "compiler",
    "brl",
    "bcl",
    "bdl",
    "game-engine"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.10.0",
    "esbuild": "^0.19.8",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  }
}
